<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Target.AddImageTarget">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/colorPrimaryT" />

                    <ImageView
                        android:id="@+id/backArraow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_back_arraw" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Photo Target"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                        android:textColor="#000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/photoRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/photopicker"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_add_photo"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Please upluad photo you want to recognize"
                        android:layout_toRightOf="@id/photopicker"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        />



                </RelativeLayout>

                <ImageView
                    android:id="@+id/uploadedImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/ic_add"
                    />

                <RelativeLayout
                    android:id="@+id/vidRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="310dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/vidiopicker"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_add_video"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Please upload video you want to play"
                        android:layout_toRightOf="@id/vidiopicker"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/YTRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="335dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/youtubepicker"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_play_video_red"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="or choose video  from YouTube"
                        android:layout_toRightOf="@id/youtubepicker"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        />

                </RelativeLayout>

                <VideoView
                    android:id="@+id/videoPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginTop="370dp"
                    android:layout_centerHorizontal="true"
                    />

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/player_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="370dp">

                </com.google.android.youtube.player.YouTubePlayerView>

                <ImageView
                    android:id="@+id/vidIM"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="370dp"
                    android:src="@drawable/ic_add"
                    />
                <EditText
                    android:id="@+id/bookname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vidIM"
                    android:layout_marginStart="90dp"
                    android:singleLine="true"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Book Name "
                    android:layout_below="@id/vidIM"
                    android:layout_alignBaseline="@id/bookname"
                    android:layout_marginStart="10dp"
                    />


                <EditText
                    android:id="@+id/title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bookname"
                    android:layout_marginStart="90dp"
                    android:singleLine="true"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/bookname"
                    android:layout_alignBaseline="@id/title"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"

                    android:text="Title " />


                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="textMultiLine"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Description "
                    android:layout_below="@id/bookname"
                    android:layout_alignBaseline="@id/description"
                    android:layout_marginStart="10dp"

                    />

                <Button
                    android:id="@+id/addTarget"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/description"
                    android:layout_marginTop="10dp"
                    android:text="Add"/>


            </RelativeLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>